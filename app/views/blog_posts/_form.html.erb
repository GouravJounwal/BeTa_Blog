<%= form_with model: blog_post do |f| %>
    <% if f.object.errors.any? %>
        <% f.object.errors.full_messages.each do |msg| %>
            <p><%= msg %></p>
        <% end %>
    <% end %>
    <div>
        <%= f.label :title %>
        <%= f.text_field :title %>
    </div>  

    <div>
        <%= f.label :body %>
        <%= f.text_area :body %>
    </div>
    <%= f.button "Create or update it" %>
<% end %>
    